@model ResetPasswordViewModel

@{
    Layout = "_AccountLayout";
   if (Model != null)
    {
        Model.Email = Context.Request.Query["email"];
        Model.Token = Context.Request.Query["token"];
    }
}


<div class="sidenav">
         <div class="login-main-text">
        <h2>Application<br> Reset Password Page</h2>
        <p>Reset Password to access.</p>
         </div>
      </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
         <form asp-action="ResetPassword" method="post">
                 <input type="hidden" asp-for="@Model.Email" />
                <input type="hidden" asp-for="@Model.Token" />

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password"></span>

                    </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>

                </div>

                    <button type="submit" class="btn btn-black">Reset Password</button>

            </form>

            <div class="mt-2">
                <a type="submit" class="btn btn-secondary" asp-action="Register">Register</a>
                <a type="submit" class="btn btn-secondary d-inline ms-2" asp-action="Login">Login</a>
            </div>
            </div>
         </div>
      </div>