@model Event
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model != null)
{
    <div class="row">
        <!-- Product Image -->
        <div class="col-12 col-md-6 mb-4 mb-md-0 EventDetailsImage">
               @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content("~/Images/Events/" + Model.ImageUrl)" alt="Event Image" class="product-image">
        }
        else
        {
            <!-- Placeholder image if no image URL is set -->
            <img src="~/Images/Events/placeholder.png" alt="Placeholder Image" class="product-image">
        }
       </div>
        <!-- Product Details -->
        <div class="col-12 col-md-6">
            <div class="details-card">
                <h2>@Model.Name</h2>
                <p class="mt-4">@Model.Description</p>
                <p><strong>Date:</strong>@Model.Date</p>
                <p><strong>Organizer:</strong> (Not Now After Finishing Identity)</p>
            <p><strong>Total available Tickets : </strong> @Model.TotalNumberOfTickets</p>
            
            <a asp-controller="Event" asp-action="BookTicket" asp-route-id="@Model.Id" class="btn btn-primary btn-custom">Book Now</a>

            </div>
        </div>
    </div>
    }
<br/>